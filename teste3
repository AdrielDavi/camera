import pytesseract as pt
import cv2
import numpy as np
pt.pytesseract.tesseract_cmd = ("C:\Program Files\Tesseract-OCR\Tesseract.exe")

imagem = cv2.imread("poesia.jpg")

kernel = np.ones((5,5),np.uint8) 

imagem_ajustada = cv2.resize(imagem, (640, 480))
imagem_ajustada = cv2.cvtColor(imagem_ajustada, cv2.COLOR_BGR2GRAY)
#imagem_ajustada = cv2.threshold(imagem_ajustada, 0, 255, cv2.THRESH_BINARY + cv2.THRESH_OTSU)[1] #interessante
#imagem_ajustada = cv2.Canny(imagem_ajustada, 100, 200) #dar uma olha


cv2.imshow("img",imagem_ajustada)
cv2.waitKey(0)
print(pt.pytesseract.image_to_string(imagem_ajustada, lang="por", config='--psm 0'))